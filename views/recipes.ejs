<!DOCTYPE html>

<html lang="en">

<head>
<meta charset="UTF-8">
<!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />
<title>Recipe</title>
</head>

<body>
  <div class="container-fluid text-center w-75">
      <nav class="navbar navbar-light bg-light justify-content-center">
        <a class="navbar-brand" href="/">Home</a>
      </nav>
<% recipe.forEach((item) => { %>
        <h1 id="header"><%= item.title %></h1>
      <% });
    %>

<% recipe.forEach((item) => { %>
        <img src = "<%= item.image %>" alt="<%= item.imagealt %>" width="40%" height="40%"></img>
      <% });
    %>


<% recipe.forEach((item) => { %>
        <p>Preparation time: <%= item.preptime %></p>
      <% });
    %> 

<% recipe.forEach((item) => { %>
        <p>Makes: <%= item.servings %></p>
      <% });
    %> 


<div id="ingredients">
  <h2 class="my-5">Ingredients</h2>
  
  <ul>
    <% recipe.forEach((item) => { %>
        <% item.ingredients.forEach((value) => { %> <li><%= value %></li> <%}) %>
        
        <% });
    %>    
  </ul>

</div>

<div id="instructions">
  <h2 class="my-5">Instructions</h2>
  
  <ol>
     <% recipe.forEach((item) => { %>
        <% item.instructions.forEach((value) => { %> <li><%= value %></li> <%}) %>
        
        <% });
    %>
  </ol>

</div>
</div>
</body>

</html>